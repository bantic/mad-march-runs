<header>


  <div class="mm-nav navbar navbar-default">
    <div class="navbar-header">
      {{#link-to 'index' class="navbar-brand top-padded-nav"}}
        <img src='MadMarchRunsNav.png'>
      {{/link-to}}
    </div>
    <nav>
      <ul class="nav navbar-nav">
        <li>{{link-to 'Rules & Regulations' 'rules'}}</li>
        {{#if session.isAuthenticated}}
          <li>{{link-to 'March Runs' 'select-teams'}}</li>
          <li>{{link-to 'Daily Survivor' 'picks'}}</li>
        {{/if}}
      </ul>
      <ul class="nav navbar-nav navbar-right">
        {{#if session.isAuthenticated}}
          <li class="top-padded-nav">{{session.currentUser.email}}</li>
          {{#if session.currentUser.isAdmin}}
            <li><a target='_blank' href="http://mad-march-runs-api.herokuapp.com/admin">Admin</a></li>
          {{/if}}
          <li>{{link-to 'Sign out' 'sign-out'}}</li>
        {{else}}
          <li>{{link-to 'Log In' 'login'}}</li>
          <li>{{link-to 'Sign up' 'sign-up'}}</li>
        {{/if}}
      </ul>
    </nav>
  </div>
</header>
